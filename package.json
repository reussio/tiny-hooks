{
	"name": "tiny-hooks",
	"version": "1.1.0",
	"description": "A tiny collection of reusable React hooks written in TypeScript for modern web applications.",
	"license": "MIT",
	"type": "module",
	"private": false,
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"/dist"
	],
	"scripts": {
		"prepare": "lefthook install",
		"clean": "rm -rf dist",
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"build:clean": "bun run clean && bun run build",
		"test": "bun test",
		"lint": "biome lint",
		"lint:fix": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check",
		"check:write": "biome check --write",
		"prepublishOnly": "bun run build",
		"release": "bun run build && changeset publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reussio/tiny-hooks.git"
	},
	"bugs": {
		"url": "https://github.com/reussio/tiny-hooks/issues"
	},
	"homepage": "https://github.com/reussio/tiny-hooks#readme",
	"keywords": [
		"react",
		"hooks",
		"typescript",
		"usehooks",
		"tiny-hooks"
	],
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"typescript": "^5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@changesets/cli": "^2.29.7",
		"@testing-library/react": "^16.3.0",
		"@types/bun": "latest",
		"@types/jsdom": "^27.0.0",
		"jsdom": "^27.1.0",
		"lefthook": "^2.0.2",
		"tsup": "^8.5.0"
	}
}
